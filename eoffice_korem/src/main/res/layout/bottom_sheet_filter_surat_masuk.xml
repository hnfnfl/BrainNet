            android:layout_width="100dp"
            android:layout_height="5dp"
            android:background="@drawable/rounded_box"
            android:backgroundTint="?attr/colorOnSecondaryContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator1">

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/bentuk_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                app:smsp_arrowColor="?attr/colorOnSecondaryContainer"
                app:smsp_hint="Filter Bentuk Surat"
                app:smsp_hintColor="?attr/colorOnSecondaryContainer"
                app:smsp_isOutlined="true"
                app:smsp_itemColor="?attr/colorOnBackground"
                app:smsp_itemListColor="?attr/colorOnBackground"
                app:smsp_itemListHintBackgroundColor="?attr/colorOnSecondaryContainer"
                app:smsp_itemListHintColor="?attr/colorOnSecondaryContainer"
                app:smsp_multilineError="false"
                app:smsp_outlinedBoxColor="?attr/colorOnSecondaryContainer"
                app:smsp_outlinedBoxRadius="4dp"
                app:smsp_selectedItemListColor="?attr/colorOnSecondaryContainer" />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/sumber_surat2_spinner"
                android:layout_width="0dp"
